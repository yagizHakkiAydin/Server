@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Multiple Choice Question</title>
    <link rel="stylesheet" href="~/css/multiple.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <script src="~/js/multiple.js"></script>
</head>
<body>
    <div class="multiple">
        <form action="initial" id="myform">
        <div class="question">

            <label id="question-label" for="question">Question</label>
            <textarea name="question-area" id="qarea" cols="38" rows="5">@ViewBag.Question.QuestionDescription</textarea>
        </div>
        <br>
        <div class="category">
            <label for="category" id="label-category">Category</label>
                
            <select name="question-category" id="question-category">
                    <option value=@ViewBag.Question.QuestionCategory>@ViewBag.Question.QuestionCategory</option>
                <option value="Art">Art</option>
                <option value="Science">Science</option>
                <option value="Sport">Sport</option>
                <option value="Entertainment">Entertainment</option>
                <option value="Geography">Geography</option>
                <option value="History">History</option>
            </select>

        </div>
        <div class="allanswer">
        <div id = "answer1" class="answer">
            <label class="answer-label" for="answer">Choice-1 </label>
            <input id="input1" class="answer-inp" type="text" value=@ViewBag.Question.Option1>

        </div>

        <div id = "answer2" class="answer">
            <label class="answer-label" for="answer">Choice-2 </label>
            <input id="input2" class="answer-inp" type="text" value=@ViewBag.Question.Option2>

        </div>

        <div id = "answer3" class="answer">
            <label class="answer-label" for="answer">Choice-3 </label>
            <input id="input3" class="answer-inp" type="text" value=@ViewBag.Question.Option3>

        </div>

        <div id = "answer4" class="answer">
            <label class="answer-label" for="answer">Choice-4 </label>
            <input id="input4" class="answer-inp" type="text" value=@ViewBag.Question.Option4>

        </div>
        </div>
        <div class="true-answer">
            <label class="answer-label" for="true-answer">Correct Answer</label>
                <input id="answer-inp" class="true-answer-inp" type="text" value=@ViewBag.Question.QuestionAnswer>
       
        </div>
       
        <div class="icons">

                <i class="fa-sharp fa-solid fa-circle-check fa-2xl" id="icon1" onclick="alertFunction(); update();"></i>


            <i class="fa-solid fa-circle-xmark fa-2xl" id="icon2" onclick="deleteFunction()"></i>

        </div>

           

    </form>
          
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.2.0/sweetalert2.all.min.js"></script>
    <script src="~/js/vendor/jquery-2.2.4.min.js"></script>
    <!-- bootstrap 4 js -->
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/metisMenu.min.js"></script>
    <script src="~/js/jquery.slimscroll.min.js"></script>
    <script src="~/js/jquery.slicknav.min.js"></script>


        <script>
            function update() {

                $.ajax({
                    type: 'post',
                    url: '/Questions/UpdateQuestionMultiple',
                    data: {
                        'id': @ViewBag.Question.Id,
                        'qdes': $("#qarea").val(),
                        'category': $("#question-category").val(),
                        'answer': $("#answer-inp").val(),
                        'option1': $("#input1").val(),
                        'option2': $("#input2").val(),
                        'option3': $("#input3").val(),
                        'option4': $("#input4").val(),
                    }


                })
            }

        </script>





</div>
    @Html.ActionLink("", "Index", "Home", null, new { @class="btn btn-info fa fa-home fa-xl"})
</body>
</html>
