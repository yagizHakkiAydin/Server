@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Classic Question</title>
    <link rel="stylesheet" href="~/css/classic.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <script src="~/js/classic.js"></script>
</head>
<body>

    <div class="classicq">

        <div class="question">
            <label id="question-label" for="question">Question</label>
            <textarea name="question-area" id="qarea" cols="38" rows="5">@ViewBag.Question.QuestionDescription</textarea>
        </div>
        <div class="category">
            <label for="category" id="label-category">Category</label>
            <select name="question-category" id="question-category">
                <option value=@ViewBag.Question.QuestionCategory>@ViewBag.Question.QuestionCategory</option>
                <option value="Art">Art</option>
                <option value="Science">Science</option>
                <option value="Sport">Sport</option>
                <option value="Entertainment">Entertainment</option>
                <option value="Geography">Geography</option>
                <option value="History">History</option>

            </select>
        </div>
        <div class="answer">
            <label id="answer-label" for="answer">Answer </label>
            <input id="answer-inp" type="text" value=@ViewBag.Question.QuestionAnswer>
        </div>
        <div class="icons">
            <button class="btn" id="btn1">
                <i class="fa-sharp fa-solid fa-circle-check fa-2xl" id="icon1" onclick="alertFunction(); update();"></i>
            </button>
            <button class="btn" id="btn2">
                <i class="fa-solid fa-circle-xmark fa-2xl" id="icon2" onclick="deleteFunction()"></i>
            </button>
        </div>


    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.2.0/sweetalert2.all.min.js"></script>
    <script src="~/js/vendor/jquery-2.2.4.min.js"></script>
    <!-- bootstrap 4 js -->
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/metisMenu.min.js"></script>
    <script src="~/js/jquery.slimscroll.min.js"></script>
    <script src="~/js/jquery.slicknav.min.js"></script>

    <script>
        function update() {

            $.ajax({
                type: 'post',
                url: '/Questions/UpdateQuestionClassic',
                data: {

                    'id' : @ViewBag.Question.Id,
                    'qdes': $("#qarea").val(),
                    'category': $("#question-category").val(),
                    'answer': $("#answer-inp").val(),

                }


            })

        }
    </script>

    @Html.ActionLink("", "Index", "Home", null, new { @class="btn btn-info fa fa-home fa-xl"})
</body>
</html>